<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="@dimen/bottom_bar_button_inactive_width"
              android:layout_height="@dimen/bottom_bar_default_height"
              android:background="@color/bottomBarDark"
              android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="12dp"
        android:gravity="center"
        android:paddingRight="12dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/img_button_bg"
            android:layout_width="24dp"
            android:layout_height="24dp"/>
        <TextView
            android:id="@+id/txt_button_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Default"
            android:visibility="gone"
            android:textColor="@color/bottomBarLight"
            android:textSize="14sp"/>
    </LinearLayout>
</LinearLayout>